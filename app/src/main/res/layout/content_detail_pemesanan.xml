<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.DetailPemesananActivity"
    tools:showIn="@layout/activity_detail_pemesanan"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginBottom="10dp"
            android:gravity="center"
            style="@style/TextSpec.Field"
            android:text="Info"

            />

        <TextView
            android:textSize="18sp"
            android:text="Televisii"
            android:id="@+id/tvKategori"
            style="@style/TextSpec.Value" />

        <TextView
            style="@style/TextSpec.Gray"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Kategori" />

        <View
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            />

        <TextView
            android:textSize="18sp"
            android:text="1. Blablabl\n2. Blablabla\n3. Blablabla"
            android:id="@+id/tvKeluhan"
            style="@style/TextSpec.Value" />

        <TextView
            android:layout_marginBottom="10dp"
            android:gravity="center"
            style="@style/TextSpec.Gray"
            android:text="Keluhan"
            />

        <View
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            />

        <com.shuhart.stepview.StepView
            app:sv_stepsNumber="3"
            android:id="@+id/svProses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:sv_selectedCircleColor="@color/colorPrimaryDark"
            app:sv_selectedTextColor="@color/colorPrimaryDark"
            app:sv_stepLineWidth="1dp"
            app:sv_stepPadding="4dp"
            app:sv_nextTextColor="@color/colorAccent"
            app:sv_nextStepLineColor="@color/colorAccent"
            app:sv_doneCircleColor="@color/colorPrimaryDark"
            app:sv_doneStepLineColor="@color/colorPrimaryDark"
            app:sv_doneCircleRadius="12dp"
            app:sv_selectedCircleRadius="12dp"
            app:sv_selectedStepNumberColor="@color/colorWhite"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_doneStepMarkColor="@color/colorPrimary"
            app:sv_stepNumberTextSize="12sp"
            app:sv_animationType="Line"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:gravity="center"
            style="@style/TextSpec.Gray"
            android:text="Proses"
            />

        <View
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            />

        <TextView
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_marginTop="6dp"
            android:id="@+id/tvBiaya"
            android:visibility="gone"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlueJeansDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bayar (saldo)"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:visibility="visible"
            android:textSize="18sp"
            android:text="Cashh"
            android:id="@+id/tvKategoriBayar"
            style="@style/TextSpec.Value" />

        <TextView
            android:layout_marginBottom="10dp"
            android:gravity="center"
            style="@style/TextSpec.Gray"
            android:text="Kategori Bayar"
            />

        <View
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            />

        <LinearLayout
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/llKet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="visible"
                android:textSize="18sp"
                android:text="Cashh"
                android:id="@+id/tvKet"
                style="@style/TextSpec.Value" />

            <TextView
                android:layout_marginBottom="10dp"
                android:gravity="center"
                style="@style/TextSpec.Gray"
                android:text="Keterangan"
                />

            <View
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                />
        </LinearLayout>

        <TextView
            android:textSize="18sp"
            android:text="2018-00-00 00:00"
            android:id="@+id/tvTanggal"
            style="@style/TextSpec.Value" />

        <TextView
            android:layout_marginBottom="10dp"
            android:gravity="center"
            style="@style/TextSpec.Gray"
            android:text="Tanggal Pemesanan"
            />


        <View
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/dummy_ava"
                android:layout_centerVertical="true"
                android:id="@+id/civFotoTeknisi"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <TextView
                android:id="@+id/tvDeskripsiTeknisi"
                style="@style/TextContent"
                android:layout_toRightOf="@id/civFotoTeknisi"
                android:text="Deskripsi teknisi\nAlamat Teknisi\nHP Teknisi..."
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <TextView


            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            style="@style/TextSpec.Gray"
            android:text="Pemesan"
            />




    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
