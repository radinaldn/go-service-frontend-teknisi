<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/dummy_ava"
            android:id="@+id/iv_foto"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_id_pemesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView

                    android:paddingRight="5dp"
                    android:id="@+id/iv_call"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    card_view:srcCompat="@drawable/ic_call_black"/>

                <TextView
                    android:drawablePadding="5dp"

                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/tv_nama_masyarakat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dian Service"
                    />

                <ImageView
                    android:id="@+id/iv_kategori"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                     />

            </LinearLayout>

            <TextView

                android:id="@+id/tv_keluhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ac nya matot, bau hangus, mantap"
                />

            <TextView
                android:id="@+id/tv_kategori_bayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Cashh"
                android:textColor="@color/textColorWhite"
                android:visibility="visible"/>


            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="end"
                android:id="@+id/tv_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Januari 2019 19:00" />

            <Button
                android:layout_marginTop="5dp"
                style="@style/Base.Widget.AppCompat.Button.Small"
                android:background="@color/colorPrimaryDark"
                android:text="Lihat Lokasi"
                android:id="@+id/btLihatLokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorWhite"
                android:layout_marginBottom="5dp"/>

            <Button
                android:textColor="@color/textColorWhite"
                android:background="@color/colorAccent"
                android:visibility="gone"
                android:text="Dibayar"
                android:id="@+id/btDibayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:textColor="@color/textColorWhite"
                android:background="@color/colorAccent"
                android:visibility="gone"
                android:text="Selesai"
                android:id="@+id/btUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>